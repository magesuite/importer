<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="import">
        <job name="detect_failed_imports" instance="MageSuite\Importer\Cron\FailedImportDetector" method="execute">
            <schedule>*/10 * * * *</schedule>
        </job>
        <job name="dispatch_steps" instance="MageSuite\Importer\Cron\Dispatcher" method="execute">
            <schedule>* * * * *</schedule>
        </job>
        <job name="remove_old_import_logs" instance="MageSuite\Importer\Cron\RemoveOldImportLogs" method="execute">
            <config_path>importer/logs/cron_schedule</config_path>
        </job>
    </group>
</config>
